@model Car

<div class="form-group">
    <label class="control-label">Proizvođač</label>
    <select asp-for="MakerID" asp-items="ViewBag.PossibleMakers" class="form-control"></select>
    <span asp-validation-for="MakerID" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Model</label>
    <input asp-for="ModelName" class="form-control" />
    <span asp-validation-for="ModelName" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Boja</label>
    <input asp-for="Color" class="form-control" />
</div>

<div class="form-group">
    <label class="control-label">Motor</label>
    <select asp-for="MotorID" asp-items="ViewBag.PossibleMotors" class="form-control"></select>
    <span asp-validation-for="MotorID" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Vlasnik</label>
    <select asp-for="OwnerID" asp-items="ViewBag.PossibleOwner" class="form-control"></select>
    <span asp-validation-for="OwnerID" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Datum proizvodnje</label>
    <div class="input-group date" data-provide="datepicker"
         data-date-format="@System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
        <input asp-for="ManufactureDate" type="text" class="form-control">
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
    <span asp-validation-for="ManufactureDate" class="text-danger"></span>
</div>

<div class="form-group">
    <input type="submit" value="Spremi" class="btn btn-default" />
</div>